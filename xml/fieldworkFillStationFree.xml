<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="buyingStation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://validation.gdn.giants-software.com/xml/fs25/placeable.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <parentFile xmlFilename="xml/fieldworkFillStation.xml">
        <attributes>
            <!-- update storedata -->
            <set path="placeable.storeData.name" value="$l10n_shopItem_fieldworkFillStationFree"/>
            <set path="placeable.storeData.price" value="15000"/>
            <set path="placeable.storeData.functions.function(1)" value="$l10n_function_fillStationFree"/>
            <set path="placeable.storeData.image" value="icons/store_fieldworkFillStation_black2.png"/>

            <!-- update to be an free for all fill types -->
            <set path="placeable.buyingStation.fillType(0)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(1)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(2)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(3)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(4)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(5)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(6)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(7)#priceScale" value="0" />
            <set path="placeable.buyingStation.fillType(8)#priceScale" value="0" />

            <!-- set the default color to match -->
            <set path="placeable.colorConfigurations.colorConfiguration(1)#isDefault" value="false" />
            <set path="placeable.colorConfigurations.colorConfiguration(2)#isDefault" value="true" />

         </attributes>
    </parentFile>

    <!-- ONLY FOR ICON GENERATION -->
    <storeData>
        <name>$l10n_shopItem_fieldworkFillStationFree</name>
        <image>icons/store_fieldworkFillStation.dds</image>
        <brand>LIZARD</brand>
        <species>PLACEABLE</species>
        <category>placeableMisc</category>
    </storeData>
</placeable>
